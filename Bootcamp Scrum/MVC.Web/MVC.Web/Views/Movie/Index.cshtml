@model IEnumerable<MVC.Web.Models.Movie.MovieVM>
@{
    ViewBag.Title = "Movies";
}
@if (Model.Count() == 0)
{
    <label>There isn't movies to show.</label>
}
else
{
    <table class="table">
        @for (int i = 0; i < Model.Count(); i = i + 4)
        {
            <tr>
                @for (int j = i; j < i + 4 && j < Model.Count(); j++)
                {
                    if (j < Model.Count())
                    {
                        <td>
                            <span>
                                <a href="@Url.Action("Details", "Movie", new { id = Model.ElementAt(j).Id})" title="List View" class="links">
                                    <img src="~/Content/Images/@Model.ElementAt(j).Image" width="150" height="150" alt="Image not available" /><br />
                                    @Html.Label(Model.ElementAt(j).Name)
                                </a>
                            </span>
                        </td>
                    }
                }
            </tr>
        }
    </table>  
}
<div>
    <a href='@Url.Action("Create", "Movie")'>
        <button type="button" class="btn btn-danger btn-lg" style="display: flex; float: right">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </a>
</div>

