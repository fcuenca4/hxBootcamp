@model IEnumerable<MVC.Web.Models.Actor.ActorVM>

@{
    ViewBag.Title = "Actors ";
}



<table class="table">
    <tr>
        <th>
            <h2>List of Actors</h2>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href='@Url.Action("Edit", "Actor", new { id = item.Id })'>
                    <button type="button" class="btn btn-default btn-sm" style="display: flex; float: right">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </a>
                <a href='@Url.Action("Details", "Actor", new { id = item.Id })'>
                    <button type="button" class="btn btn-default btn-sm" style="display: flex; float: right">
                        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    </button>
                </a>
                <a href='@Url.Action("Delete", "Actor", new { id = item.Id })'>
                    <button type="button" class="btn btn-default btn-sm" style="display: flex; float: right">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
    }

</table>
<a href='@Url.Action("Create", "Actor")'>
    <button type="button" class="btn btn-danger btn-lg" style="display: flex; float: right">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</a>
